<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    tools:context=".ThirdScreen"-->

    <ImageView

        android:id="@+id/room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFCCCB"
        android:src="@drawable/empty_room"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="79dp" />

    <ImageView

        android:id="@+id/bowWow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="400dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="480dp"
        android:layout_marginRight="480dp"
        android:layout_marginBottom="230dp"
        android:gravity="center"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/bfront"
        app:layout_constraintBottom_toBottomOf="@+id/room"
        app:layout_constraintEnd_toEndOf="@+id/room"
        app:layout_constraintStart_toStartOf="@+id/room"
        app:layout_constraintTop_toTopOf="@+id/room"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/kat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/kfront"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_marginStart="450dp"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="200dp"
        android:visibility="visible" />

    <TextView

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center|top"
        android:textSize="45sp"
        android:paddingRight="150dp"
        android:paddingStart="150dp"
        android:paddingEnd="150dp"
        android:text="@string/score"
        android:textColor="#33b5e5"
        android:textStyle="bold" />
</RelativeLayout>